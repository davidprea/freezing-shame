%fieldset
	%legend Iterations
	%p
		%input{ :type => "radio", :name => "iterations", :value => 0, :checked => true }
			%label{ :title => "Output blow-by-blow combat log" }
				Single match. 
	%p
		%input{ :type => "radio", :name => "iterations", :value => 2, :checked => false }
			%label{ :title => "Output aggregate stats." }
				Fight 100 times.
	%p
		%input{ :type => "radio", :name => "iterations", :value => 4, :checked => false }
			%label{ :title => "10,000 divided by # of opponents." }
				"Lots."
%fieldset
	%legend Hope
	%label Max spent per fight:
	%select{ :name => "hope"}
		-5.times do |i|
			%option{ :value => i }
				= (i).to_s
%fieldset
	%legend Stance
	%select{ :id => "stance", :name => "stance"}
		-stances = ["Defensive","Open","Forward"]
		-stances.size.times do |i|
			%option{:value => 12-i*3 }
				=stances[i]

%fieldset
	%legend Setting
	-["Underground", "Forest", "Darkness", "Mirkwood"].each do | p |
		%p
			%input{ :type => "checkbox", :name => p.downcase.to_sym, :disabled => true }
				%label{ :title => "Not yet implemented" }
					=p
				
%fieldset
	%legend Official Rules
				
	%input{ :type => "checkbox", :name => "sauron_rule", :checked => true}
		%label{ :title => "When Hero rolls a Sauron, opponent will try a called shot."}
			"Called Shot on Sauron" Rule
		
	%p

	
	%input{ :type => "checkbox", :name=> "favoured_skills", :checked => true }
		%label{ :title => "Adversaries add their Attribute Level to all favoured skill checks."}
			Adversary Favoured Skills RAW 
			
%fieldset
	%legend Tactics
	%input{ :type => "checkbox", :name => "knockback_rule", :checked => false}
		%label{ :title => "When hit by a Great or Extraordinary Success, hero will take half damage but miss next turn."}
			Use Knockback 
	%p 
	%input{ :type => "checkbox", :name => "bite_kneecaps", :checked => false}
		%label{ :title => "When Hero is Weary, switch to Forward stance. (Credit to Rich H.)"}
			"Bite Their Kneecaps Off" 
	

		
