%html
	%head
		%title Elfcrusher's Middle Earth Death Match
		%link(rel="stylesheet" href="http://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css")
		%link(rel="stylesheet" href="css/styles.css")
		
	%body
		#wrapper
			#header
				%h1 Elfcrusher's Middle Earth Death Match
			
			#content

			%form#masterform{ :action => '/masterform', :method => "Post"}
						
				#hero
					%fieldset
						%legend
							Hero
						%div.cultureandbackground
							%label
								Culture:
							#cultures
								= partial :cultures, :layout => false, :locals => { :culture => "None"}		
							Background:
							#backgrounds
								= partial :backgrounds, :layout => false, :locals => { :culture => "None", :background => "None"}
						#attributes
							= partial :attributes, :layout=>false,:locals => {:attributes =>{:body=>0,:heart=>0,:wits=>0}}
						
						#cultural_blessing
							= partial :cultural_blessing, :layout=>false, :locals => {:culture => "Hero" }
							
						#skills
							= partial :skills, :layout => false
							
						#gear		
							= partial :gear, :layout => "false", :locals => { :culture => "Hero" }
							
						#feats
							= partial :feats, :layout => false, :locals => { :culture => "Hero" }
						
					
							
					
				#monster		
					%fieldset
						%legend Opponent
						%p 
							Family:
							#monsterclass
								= partial :monsterclass, :layout => false
						%p 
							Type:
							#monstertype
								= partial :monstertype, :layout => false, :locals => { :monsterclass => "None" }
						%fieldset
							%legend Stats
							#monsterstats
								= partial :monsterstats, :layout => false, :locals => { :monsterclass => "Monster", :stats => {} }
						%p
							Number:
							%select{ :name => 'monstercount' }
								-10.times do |i|
									%option{ :value => i + 1}
										=(i + 1).to_s
				#matchsettings
					%fieldset
						%legend General Settings
						= partial :matchsettings, :layout => false
						#submit_button{ :align => "center" }
							= partial :submit_button, :layout => false, :locals => { :title => "Fight!" }

					
			#output
%script(src="/helpers.js")

			

