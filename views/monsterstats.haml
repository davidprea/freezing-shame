-stats.keys.sort.each do | key |
	%p
		-if key != "Special Abilities"
			=key + ": " + stats[key].to_s
-if stats.include? "Special Abilities"
	-stats["Special Abilities"].split(',').each do |s|
		%p
			%input{ :type => "checkbox", :name => s, :checked => true }
				%label.monsterability{ :title => Monster.abilities[s.to_sym][:tooltip] }
					=Monster.abilities[s.to_sym][:name]

