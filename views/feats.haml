-heroclass=(Object.const_get(culture))
					
%fieldset.checkboxes{ :culture=>"#{culture}" }
	%legend Rewards
	- rewards = heroclass.rewards
	- rewards.keys.each do | r |
		%p
		%input{:name => r, :type=>"checkbox", :culture=>culture, :reward_type => rewards[r][:type], :disabled => !rewards[r][:implemented], :onchange=>"updateRewards(this)", :title => rewards[r][:tooltip]}
			%label{ :title => rewards[r][:tooltip] }
				= rewards[r][:name]
	
%fieldset.checkboxes
	%legend Virtues
	- virtues = heroclass.virtues
	- virtues.keys.each do | v |
		%p
		%input{:type=>"checkbox", :name=>v, :disabled => !virtues[v][:implemented], :title => virtues[v][:tooltip] }
			%label{ :title => virtues[v][:tooltip] }
				= virtues[v][:name] 



